extends template

block contenidos
    div(class="container-fluid")
        div(class="row")
            div(class="col-12")
                div(class="contenido")
                    h1 Vista de Productos
                
                    if existenProductos
                        table(class="table table-dark table-borderless align-middle")
                            thead
                                tr
                                    th(scope="col") Nombre
                                    th(scope="col") Precio
                                    th(scope="col") Foto
                            tbody
                                each producto in arrayProductos
                                    tr 
                                        td= producto.title
                                        td= producto.price
                                        td
                                            img(src=producto.thumbnail class="thumbnail")
                    else
                        p(class="alert alert-warning no-data") No hay productos