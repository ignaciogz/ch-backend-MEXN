<div class="container-fluid">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">4 D E V S</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact Us</a>
                            </li>
                    </ul>
                    {{#if administrator}}
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link disabled">Admin Menu:</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-info text-uppercase fw-bold" href="/#addproduct">Add product</a>   
                        </li>
                    </ul>
                    {{/if}}
                    <div class="d-flex navbar-text">
                        <a class="nav-link" href="/#"><i class="fa-solid fa-user"></i></a>
                        <a class="nav-link" aria-current="page" href="/#cart"><i class="fa-solid fa-cart-shopping"></i> <span id="itemsNumber">{{cart.items.length}}</span></a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="col-10 offset-1">
            <div class="contenido">
                <h3 class="text-center">Shopping Cart 
                    <a href="javaScript:void(0)" id="deleteAllCartBtn" class="btn btn-outline-danger ms-2">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </h3>

                {{#if cart.items.length}}
                <table class="table table-dark table-borderless align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Foto</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody id="contenedorProductos">
                        {{#each cart.items}}
                        <tr>
                            <td><img src="{{this.foto}}" class="thumbnail"></td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.precio}}</td>
                            <td>
                                <a href="javaScript:void(0)" class="btn btn-danger ms-2 deleteProdCartBtn" data-id_prod={{this.id}}>
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p class="alert alert-warning no-data">Your shopping cart are empty</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>